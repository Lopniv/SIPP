<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_refresh"
            app:tint="@color/green_1000" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_news"
            android:layout_marginTop="10dp"
            android:text="detikNews"
            android:textColor="@color/grey"
            android:fontFamily="sans-serif"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_source"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:text="09 Juni 2021 18:53 WIB"
            android:textColor="@color/grey"
            android:textStyle="italic"
            android:fontFamily="sans-serif"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_news"
            android:layout_below="@id/tv_source"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Ini Dia Rumah Kelola Sampah Berkelanjutan di Sultra"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_news"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:text="PT Pelayaran Nasional Indonesia atau PT PELNI (Persero) kembali membangun Rumah Kelola Sampah (RKS) di Sulawesi Tenggara. Seperti apa sih penampakannya?"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:fontFamily="sans-serif"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/green_100"/>

</androidx.constraintlayout.widget.ConstraintLayout>